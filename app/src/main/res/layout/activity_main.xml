<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        />
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/userIDTextInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                app:counterEnabled="true"
                app:counterMaxLength="100"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/igboedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textImeMultiLine"
                    android:textAlignment="center"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="10dp"
                    android:hint="@string/type_your_words"/>
                </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:gravity="center">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/keyboardparentlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/close"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_close_black_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/a1"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:background="?android:attr/selectableItemBackground"
                            android:text="@string/_1"/>
                        <Button
                            android:id="@+id/b2"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:background="?android:attr/selectableItemBackground"
                            android:text="@string/_2"/>
                        <Button
                            android:id="@+id/c3"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:background="?android:attr/selectableItemBackground"
                            android:text="@string/_3"/>
                        <Button
                            android:id="@+id/d4"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_4"/>
                        <Button
                            android:id="@+id/e5"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_5"/>
                        <Button
                            android:id="@+id/f6"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_6"/>
                        <Button
                            android:id="@+id/g7"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_7"/>
                        <Button
                            android:id="@+id/h8"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_8"/>
                        <Button
                            android:id="@+id/k9"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_9"/>
                        <Button
                            android:id="@+id/l0"
                            android:layout_width="30dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/q"
                            android:layout_width="40dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/q"/>
                        <Button
                            android:id="@+id/w"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/w"/>
                        <Button
                            android:id="@+id/e"
                            android:layout_width="45dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/e"/>
                        <Button
                            android:id="@+id/r"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/r"/>
                        <Button
                            android:id="@+id/t"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/t"/>
                        <Button
                            android:id="@+id/y"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/y"/>
                        <Button
                            android:id="@+id/u"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/u"/>
                        <Button
                            android:id="@+id/i"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/i"/>
                        <Button
                            android:id="@+id/o"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/o"/>
                        <Button
                            android:id="@+id/p"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/p"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/a"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/a"/>
                        <Button
                            android:id="@+id/s"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/s"/>
                        <Button
                            android:id="@+id/d"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/d"/>
                        <Button
                            android:id="@+id/f"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/f"/>
                        <Button
                            android:id="@+id/g"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/g"/>
                        <Button
                            android:id="@+id/h"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/h"/>
                        <Button
                            android:id="@+id/j"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/j"/>
                        <Button
                            android:id="@+id/k"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/k"/>
                        <Button
                            android:id="@+id/l"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/l"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/uppercase"
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_file_upload_black_24dp"
                            />

                        <Button
                            android:id="@+id/z"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/z"/>
                        <Button
                            android:id="@+id/x"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/x"/>
                        <Button
                            android:id="@+id/c"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/c"/>
                        <Button
                            android:id="@+id/v"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/v"/>
                        <Button
                            android:id="@+id/b"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/b"/>
                        <Button
                            android:id="@+id/n"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/n"/>

                        <Button
                            android:id="@+id/m"
                            android:layout_width="35dp"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/m"/>
                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="20dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_backspace_black_24dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/number"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/_123"/>
                        <Button
                            android:id="@+id/comma"
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/comma"/>
                        <Button
                            android:id="@+id/spacebar"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:background="#80363636"
                            android:text=""/>
                        <Button
                            android:id="@+id/dot"
                            android:layout_width="35dp"
                            android:layout_height="40dp"
                            android:background="@android:color/transparent"
                            android:textColor="@color/white"
                            android:text="@string/point"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:id="@+id/nextline"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:src="@drawable/ic_keyboard_return_black_24dp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>